@page
@model Portal.Pages.Topics.CreateModel

@{
    ViewData["Title"] = "Create";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Create Topic</h1>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<h4>Topic</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Topic.Name" class="control-label"></label>
                <input asp-for="Topic.Name" class="form-control" />
                <span asp-validation-for="Topic.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Topic.Keywords" class="control-label"></label>
                <input asp-for="Topic.Keywords" class="form-control" />
                <span asp-validation-for="Topic.Keywords" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
